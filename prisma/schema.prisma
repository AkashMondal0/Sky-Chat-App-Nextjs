generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Notification {
  id           String   @id @default(uuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  title        String   @db.Text
  body         String   @db.Text
  read         Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  messageCount Int      @default(0)

  @@index([userId])
}

model UserHistory {
  id          String @id @default(uuid())
  searchUsers User[]
}

// chat app schemas
model User {
  id             String        @id @default(uuid())
  userId         String
  name           String
  imageUrl       String        @db.Text
  email          String        @unique
  password       String
  phone          String        @db.Text
  status         String        @db.Text
  cloudMessageId String        @db.Text
  userHistory    UserHistory  @relation(fields: [userId], references: [id])

  notification  Notification[]
  conversations Conversation[]
  groups        Group[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model Conversation {
  id              String          @id @default(uuid())
  users           User[]
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  lastMessage     String          @db.Text
  lastMessageTime DateTime        @default(now())
  messages        MessageDirect[]
  messageCount    Int             @default(0)
}

model SeenBy {
  id        String        @id @default(uuid())
  userId    String
  message   MessageDirect @relation(fields: [messageId], references: [id])
  messageId String
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  @@index([messageId])
}

model MessageDirect {
  id             String        @id @default(uuid())
  content        String        @db.Text
  fileUrl        String?       @db.Text
  memberId       String
  deleted        Boolean       @default(false)
  seen           Boolean       @default(false)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  seenBy         SeenBy[]
  Conversation   Conversation? @relation(fields: [conversationId], references: [id])
  conversationId String

  @@index([conversationId])
}

// group chat schemas

model Group {
  id              String    @id @default(uuid())
  name            String    @db.Text
  Members         Member[]
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  lastMessage     String    @db.Text
  lastMessageTime DateTime  @default(now())
  messages        Message[]
  authorId        String?
  users           User[]
  messageCount    Int       @default(0)

  @@index([authorId])
}

enum MemberRole {
  ADMIN
  COADMIN
  MEMBER
}

model Member {
  id        String     @id @default(uuid())
  role      MemberRole @default(MEMBER)
  userId    String
  // user      User     @relation(fields: [userId], references: [userId])      
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  groupId   String
  group     Group      @relation(fields: [groupId], references: [id])

  @@index([groupId])
}

model GroupSeenBy {
  id              String   @id @default(uuid())
  userId          String
  messageId       String
  message         Message  @relation(fields: [messageId], references: [id])
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  messageDirectId String?

  @@index([messageId])
}

model Message {
  id       String        @id @default(uuid())
  content  String        @db.Text
  fileUrl  String?       @db.Text
  memberId String
  groupId  String
  group    Group         @relation(fields: [groupId], references: [id])
  deleted  Boolean       @default(false)
  seenBy   GroupSeenBy[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([groupId])
}
